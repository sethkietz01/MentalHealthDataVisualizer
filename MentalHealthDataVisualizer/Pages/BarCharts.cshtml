@page
@using MentalHealthDataVisualizer.Models
@model MentalHealthDataVisualizer.Pages.IndexModel
@{

    var demographicData = Model.AmiPrevalenceData
        .GroupBy(d => d.demographic)
        .Select(g => new
        {
            Demographic = g.Key,
            TotalTally = g.Sum(d => d.tally)
        })
        .ToList();

    var demographicLabels = demographicData.Select(d => d.Demographic).ToList();
    var demographicValues = demographicData.Select(d => d.TotalTally).ToList();

    var demographicLabelsJson = System.Text.Json.JsonSerializer.Serialize(demographicLabels);
    var demographicValuesJson = System.Text.Json.JsonSerializer.Serialize(demographicValues);


    var yearData = Model.AmiPrevalenceData
        .GroupBy(d => d.data_year)
        .Select(g => new
        {
            DataYear = g.Key,
            TotalTally = g.Sum(d => d.tally)
        })
        .OrderBy(d => d.DataYear) 
        .ToList();

    var yearLabels = yearData.Select(d => $"Year {d.DataYear}").ToList();
    var yearValues = yearData.Select(d => d.TotalTally).ToList();

    var yearLabelsJson = System.Text.Json.JsonSerializer.Serialize(yearLabels);
    var yearValuesJson = System.Text.Json.JsonSerializer.Serialize(yearValues);
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <h3>AMI Tally by Demographic</h3>
        <div class="chart-container" style="height:350px;">
            <canvas id="demographicChart"></canvas>
        </div>
    </div>

    <div class="col-md-6">
        <h3>AMI Tally by Year</h3>
        <div class="chart-container" style="height:350px;">
            <canvas id="yearChart"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <script>
        const demographicLabels = @Html.Raw(demographicLabelsJson);
        const demographicValues = @Html.Raw(demographicValuesJson);

        const demographicData = {
            labels: demographicLabels,
            datasets: [{
                label: 'Total AMI Tally',
                data: demographicValues,
                backgroundColor: 'rgba(75, 192, 192, 0.7)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        };

        const demographicConfig = {
            type: 'bar',
            data: demographicData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Total Tally' }
                    },
                    x: {
                        title: { display: true, text: 'Demographic Category' }
                    }
                }
            }
        };

        new Chart(
            document.getElementById('demographicChart'),
            demographicConfig
        );


        const yearLabels = @Html.Raw(yearLabelsJson);
        const yearValues = @Html.Raw(yearValuesJson);

        const yearData = {
            labels: yearLabels,
            datasets: [{
                label: 'Total AMI Tally',
                data: yearValues,
                backgroundColor: 'rgba(255, 99, 132, 0.7)', 
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        };

        const yearConfig = {
            type: 'bar', 
            data: yearData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Total Tally' }
                    },
                    x: {
                        title: { display: true, text: 'Year' }
                    }
                }
            }
        };

        new Chart(
            document.getElementById('yearChart'),
            yearConfig
        );
    </script>
}